    cryptohash-sha256,
    base64-bytestring,
    network              >=3.1.0.0
  ghc-options: -Wall -fno-ignore-asserts


test-suite spec
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  default-language:   Haskell2010
  other-modules:
    UnitTests
    TimeVarTests
    Properties
    Helpers
  hs-source-dirs: test
  ghc-options: -w
  cpp-options: -DNO_HGEOMETRY
  build-depends:
    base,
    directory,
    filepath,
    bytestring, process,
    reanimate,
    vector, linear,
    QuickCheck >= 2.1.0, text,
    temporary,
    tasty, tasty-golden, tasty-hunit,
    tasty-quickcheck, tasty-rerun >= 1.1.17,
    tasty-expected-failure
