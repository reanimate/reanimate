    bytestring           >=0.10.8.0,
    cassava              >=0.5.1.0,
    cereal               >=0.5.5.0,
    colour               >=2.3.4,
    containers           >=0.5.11.0,
    cubicbezier          >=0.6.0.5,
    directory            >=1.3.1.0,
    filelock             >=0.1.1.2,
    filepath             >=1.4.2,
    fingertree           >=0.1.0.0,
    fsnotify             >=0.3.0.1,
    geojson              >=3.0.4,
    hashable             >=1.3.0.0,
    lens                 >=4.16.1,
    linear               >=1.20.8,
