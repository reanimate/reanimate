  cpp-options: -DNO_HGEOMETRY
  build-depends:
    base                 >=4.10 && <5,
    JuicyPixels          >=3.3.3,
    aeson                >=1.3.0.0 && <2,
    ansi-terminal        >=0.8.0.4,
    array                >=0.5.2.0,
    attoparsec           >=0.13.2.0,
